# ============================================================================
# YT-Shorts-Auto-Factory - Environment Configuration Template
# ============================================================================
# Copy this file to .env and fill in your actual values.
# Never commit .env to version control!
# ============================================================================

# =========================
# Application Settings
# =========================
APP_NAME=yt-shorts-factory
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# =========================
# YouTube API Configuration
# =========================
# Create credentials at: https://console.cloud.google.com/apis/credentials
YOUTUBE_CLIENT_ID=your_client_id_here
YOUTUBE_CLIENT_SECRET=your_client_secret_here
YOUTUBE_CHANNEL_ID=your_channel_id_here

# OAuth redirect (usually localhost for local dev)
YOUTUBE_REDIRECT_URI=http://localhost:8080/oauth2callback

# =========================
# Content Configuration
# =========================
# Niche/topic focus for content
CONTENT_NICHE=technology
CONTENT_VIDEOS_PER_DAY=1

# Video duration constraints (in seconds)
VIDEO_MIN_DURATION=15
VIDEO_MAX_DURATION=60
VIDEO_TARGET_DURATION=45

# Video resolution (width x height) - 9:16 for Shorts
VIDEO_WIDTH=1080
VIDEO_HEIGHT=1920
VIDEO_FPS=30

# =========================
# TTS Configuration
# =========================
# Options: gtts, pyttsx3, coqui, elevenlabs
TTS_ENGINE=gtts
TTS_LANGUAGE=en
TTS_SPEED=1.0

# ElevenLabs (if using)
ELEVENLABS_API_KEY=your_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here

# =========================
# Image Generation
# =========================
# Options: stable_diffusion, dalle, stock
IMAGE_GENERATOR=stock

# Stable Diffusion settings
SD_MODEL_ID=stabilityai/stable-diffusion-xl-base-1.0
SD_INFERENCE_STEPS=30
SD_GUIDANCE_SCALE=7.5

# OpenAI/DALL-E (if using)
OPENAI_API_KEY=your_api_key_here

# =========================
# Trend Analysis
# =========================
# Reddit API (create app at: https://www.reddit.com/prefs/apps)
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=YTShortsFactory/0.1.0

# Subreddits to monitor (comma-separated)
REDDIT_SUBREDDITS=technology,programming,science,todayilearned

# Twitter/X API (optional)
TWITTER_BEARER_TOKEN=your_bearer_token_here

# Trend settings
TREND_CACHE_HOURS=6
TREND_MIN_SCORE=0.3

# =========================
# Scheduling
# =========================
# Time to generate videos (24hr format, UTC)
SCHEDULE_GENERATION_TIME=06:00
SCHEDULE_UPLOAD_TIME=08:00
SCHEDULE_TIMEZONE=UTC

# Retry settings
SCHEDULE_MAX_RETRIES=3
SCHEDULE_RETRY_DELAY=300

# =========================
# Storage Paths
# =========================
# Can be absolute or relative to project root
STORAGE_ASSETS_DIR=assets
STORAGE_TEMP_DIR=data/temp
STORAGE_CACHE_DIR=data/cache
STORAGE_ARCHIVES_DIR=data/archives
STORAGE_LOGS_DIR=logs

# =========================
# Monitoring & Alerts
# =========================
# Webhook for notifications (Slack, Discord, etc.)
ALERT_WEBHOOK_URL=

# Email alerts
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL_TO=

# =========================
# Database (Optional)
# =========================
# SQLite is default, can use PostgreSQL for scale
DATABASE_URL=sqlite:///data/ytshorts.db

# =========================
# Advanced Settings
# =========================
# Proxy for web scraping (if needed)
HTTP_PROXY=
HTTPS_PROXY=

# Chrome/Selenium settings
CHROME_HEADLESS=true
CHROME_DRIVER_PATH=

# Rate limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_PERIOD=3600
